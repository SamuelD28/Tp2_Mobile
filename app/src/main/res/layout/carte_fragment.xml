<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/Carte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_carte_ongoing"
        android:gravity="left"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/CarteCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personnel"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/CarteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Aller à L'épicerie"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/CarteDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_date"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_icon_date" />

            <TextView
                android:id="@+id/Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_thin"
                android:text="Dans 2 Jours"
                android:textAllCaps="true"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>